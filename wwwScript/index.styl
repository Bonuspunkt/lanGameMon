html, body
    font-family: sans-serif
    background-color: #fff
    color: #111
    margin: 0
    padding: 0

#location
    text-align: center
    background-color: #111
    color: #eee

h1
    margin: 0
    padding: 10px 5px
    background-color: #bbb

table
    margin: 0 0 10px
    width: 100%
    border-spacing: 0

tr:nth-child(even)
    background-color: #eee

th
    background-color: #ddd

th, td
    padding: 2px 5px

tfoot
    td
        background-color: #ddd
        padding: 5px
        font-size: small

h2
    margin: 0
    padding: 5px
    background-color: #ccc
h2:hover
    color: #228

h3
    margin: 0px
    padding: 5px
    background-color: #ddd

article
    a
        display: inline-block
        padding: 2px 5px
        margin-bottom: 10px


a, a:visited, a:hover
    color: #222
    text-decoration: none

a:hover
    color: #fff
    background-color: #000
